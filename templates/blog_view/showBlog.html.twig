{# empty Twig template #}
{% extends "base.html.twig"%}


{% block body%}
    <div class="container my-5">
        <div class="card border-none border-dark shadow">
            <div class="card-body">
                <div class="card shadow p-3 bg-dark">
                    <h3 class="text-bold text-white">ALL Blog</h3>
                </div>
                <div class="my-3">
                        <table class = "table">
                            <thead>
                                <tr>
                                    <th scope = "col">ID</th>
                                    <th scope = "col">Title</th>
                                    <th scope = "col">Author</th>
                                    <th scope = "col">Description</th>
                                    <th scope = "col">Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                {% for blog in blogs %}
                                    <tr>
                                        <th scope = "col">{{blog.id}}</th>
                                        <th scope = "col">{{blog.blog_title}}</th>
                                        <th scope = "col">{{blog.author}}</th>
                                        <th scope = "col">{{blog.blog_description}}</th>
                                        <th scope = "col">
                                            <a href = "#"><i class = "fa fa-pen text-dark px-2"></i></a>
                                            <a href = "#"><i class = "fa fa-trash text-danger"></i></a>
                                        </th>

                                    </tr>
                                {% endfor %}

                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %} 

