{# empty Twig template #}
{% extends "base.html.twig"%}


{% block body%}
    <div class="container my-5">
        <div class="card border-none border-dark shadow">
            <div class="card-body">
                <div class="card shadow p-3 bg-dark">
                    <h3 class="text-bold text-white">ALL Blog</h3>
                </div>
                <div class="my-3">

                    <table id="blog_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="sorting sorting_asc" scope = "col">ID</th>
                                <th class="sorting" scope = "col">Title</th>
                                <th class="sorting" scope = "col">Author</th>
                                <th class="sorting" scope = "col">Description</th>
                                <th class="sorting" scope = "col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for blog in blogs %}
                                <tr>
                                    <th scope = "col">{{blog.id}}</th>
                                    <th scope = "col">{{blog.blogTitle}}</th>
                                    <th scope = "col">{{blog.Author}}</th>
                                    <th scope = "col">{{blog.blogDescription}}</th>
                                    <th scope = "col">
                                        <a href = "#"><i class = "fa fa-pen text-dark px-2"></i></a>
                                        <a href = "#"><i class = "fa fa-trash text-danger"></i></a>
                                        <a href="/singleBlog/{{blog.id}}"><i class = "fa fa-eye text-primary px-2"></i></a>
                                    </th>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 

